# Interview Configuration
VITE_MAX_INTERVIEW_DURATION=3600
VITE_MAX_QUESTIONS_PER_INTERVIEW=20
VITE_DEFAULT_INTERVIEW_TYPE=HR
VITE_SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a

# File Upload Configuration
VITE_MAX_RESUME_SIZE=5242880
