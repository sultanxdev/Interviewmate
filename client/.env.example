# ===========================================
# INTERVIEWMATE CLIENT ENVIRONMENT VARIABLES
# ===========================================

# API Configuration
VITE_API_URL=http://localhost:5000
VITE_API_TIMEOUT=30000

# OAuth Authentication (Client IDs only - NO SECRETS!)
# Note: Only Client IDs are needed on frontend, secrets stay on backend
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id_here
VITE_GITHUB_CLIENT_ID=your_github_oauth_client_id_here

# Payment Gateway (Public key only)
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id_here

# Feature Flags
VITE_ENABLE_VOICE_RECORDING=true
VITE_ENABLE_PDF_EXPORT=true
VITE_ENABLE_SOCIAL_SHARING=true
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_GOOGLE_OAUTH=true
VITE_ENABLE_GITHUB_OAUTH=false

# App Configuration
VITE_APP_NAME=InterviewMate
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=AI-Powered Mock Interview Platform

# External Services
VITE_SPLINE_SCENE_URL=https://my.spline.design/orb-130p854WoA7kaJzbiEJIK22a/
VITE_SUPPORT_EMAIL=support@interviewmate.com
VITE_CONTACT_EMAIL=contact@interviewmate.com

# Social Media Links (Optional)
VITE_TWITTER_URL=https://twitter.com/interviewmate
VITE_LINKEDIN_URL=https://linkedin.com/company/interviewmate
VITE_GITHUB_URL=https://github.com/interviewmate

# Analytics & Tracking (Optional)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_HOTJAR_ID=your_hotjar_id
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Error Tracking (Optional)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Development Configuration
VITE_DEBUG_MODE=true
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=true

# Performance Configuration
VITE_ENABLE_PWA=true
VITE_ENABLE_SERVICE_WORKER=true
VITE_CACHE_DURATION=3600000

# UI Configuration
VITE_DEFAULT_THEME=light
VITE_ENABLE_ANIMATIONS=true
